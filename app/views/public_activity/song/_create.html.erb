<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title"><%= link_to activity.trackable.name, song_path(activity.trackable) %></h5>
    <p class="card-text"><%= activity.trackable.description %></p>
  </div>
  <div class="card-footer text-right text-muted">
    By <%= link_to activity.owner.username, activity.owner %> <%= timeago_tag activity.created_at, force: true %>
  </div>
</div>
